{
  "name": "lightphpf/lightphpf",
  "description": "The skeleton application for the LightPHPF framework.",
  "type": "project",
  "keywords": [
    "framework",
    "lightphpf"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Soulaimane yahya",
      "email": "soulaimaneyahya1@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app"
    }
  },
  "scripts": {
    "composer-dump": "composer dump-autoload --optimize",
    "php-fixer": [
      "./vendor/bin/phpcs --standard=PSR12 --encoding=utf-8 --extensions=php app/Models/*",
      "./vendor/bin/phpcs --standard=PSR12 --encoding=utf-8 --extensions=php app/Http/*"
    ],
    "php-cs-fixer": [
      "PHP_CS_FIXER_IGNORE_ENV=1 ./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes"
    ]
  },
  "require": {
    "php": "^8.2|^8.3",
    "symfony/var-dumper": "^5.0",
    "vlucas/phpdotenv": "^5.5",
    "twig/twig": "^3.5",
    "lightphpf/core": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "dev-master"
  },
  "minimum-stability": "stable",
  "config": {
    "optimize-autoloader": true
  },
  "support": {
    "issues": "https://github.com/lightphpf/lightphpf/issues",
    "source": "https://github.com/lightphpf/lightphpf"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../core"
    }
  ]
}
