{
  "name": "lightphpf/lightphpf",
  "description": "LightPHPF is a micro PHP framework that follows the Model-View-Controller (MVC) architecture pattern.",
  "type": "project",
  "keywords": [
    "framework",
    "lightphpf"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Soulaimane yahya",
      "email": "soulaimaneyh07@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app"
    }
  },
  "scripts": {
    "php-fixer": [
      "./vendor/bin/phpcs --standard=PSR12 --encoding=utf-8 --extensions=php app/Core/*",
      "./vendor/bin/phpcs --standard=PSR12 --encoding=utf-8 --extensions=php app/Models/*",
      "./vendor/bin/phpcs --standard=PSR12 --encoding=utf-8 --extensions=php app/Http/*",
      "./vendor/bin/phpcs --standard=PSR12 --encoding=utf-8 --extensions=php app/Commands/*"
    ],
    "php-cs-fixer": [
      "PHP_CS_FIXER_IGNORE_ENV=1 ./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes"
    ]
  },
  "require": {
    "php": "^8.3",
    "symfony/var-dumper": "^5.0",
    "vlucas/phpdotenv": "^5.5",
    "twig/twig": "^3.5"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "dev-master"
  }
}